@startuml
!theme sunlust

left to right direction
skinparam packageStyle rectangle



actor HR as "HR Advisor"
actor DM as "Dept Manager"

rectangle Database

rectangle "HR System" {

    usecase UC1 as "Get salaries of all employees"

    usecase UC2 as "Get salaries by dept"

    usecase UC3 as "Get salaries by own dept""

    usecase UC4 as "Get salaries
    by role"

    usecase UC5 as "Add new employee details"

    usecase UC6 as "View employee details"

    usecase UC7 as "Update employee details"

    usecase UC8 as "Delete employee details"



    usecase UCa as "Print salaries"

    HR -> UC1
    UC1 ..> UCa : include
    UC1 ---> Database

    HR -> UC2
    UC2 ..> UCa : include
    UC2 ---> Database

    DM -> UC3
    UC3 ..> UCa : include
    UC3 ---> Database

    HR -> UC4
    UC4 ..> UCa : include
    UC4 ---> Database

    HR -> UC5
    UC5 ---> Database

    HR -> UC6
    UC6 ---> Database

    HR -> UC7
    UC7 ---> Database

    HR --> UC8
    UC8 ---> Database


}









@enduml